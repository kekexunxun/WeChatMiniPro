/**首页样式**/

/**banner**/

.bannerbox {
  height: 180px;
  width: 100%;
}

.swiper {
  height: 180px;
  width: 100%;
}

.slide-image {
  height: 180px;
  width: 100%;
}

/**商品分类部分**/

.typebox {
  display: flex;
  margin-top: 10px;
  margin-bottom: 10px;
}

.typebox_1 {
  height: 180px;
  flex: 40%;
  /* background-color: red; */
  text-align: center;
  font-size: 16px;
  box-sizing: border-box;
  border: 1px solid #f5f6f7;
}

.typebox_2 {
  width: 60%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
  height: 180px;
  font-size: 16px;
}

.other {
  width: 50%;
  box-sizing: border-box;
  border: 1px solid #f5f6f7;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.countdown {
  width: 100%;
  background-color: wheat;
  height: 50px;
  font-size: 28rpx;
  line-height: 24px;
}

.ms_title {
  display: block;
  font-size: 28rpx;
}

.ot_title {
  display: block;
  margin-top: 5px;
}

.ms_img {
  width: 100%;
  height: 130px;
}

.ot_img {
  width: 100rpx;
  height: 100rpx;
  padding-top: 3px;
}

/*品牌展示  */

.logozone {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.logobox {
  width: 25%;
  height: 80px;
  box-sizing: border-box;
  border: 1px solid #f5f6f7;
  display: flex;
  flex-direction: row;
}

.logo_image {
  margin: 0 auto;
  margin-top: 10%;
  width: 80%;
  height: 80%;
  vertical-align: middle;
}
