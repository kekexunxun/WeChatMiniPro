@import "/tpls/product-column/product-column.wxss";
/*body背景  */
page {
  position: flex;
  background-color: #f5f6f7;
  width: 100%;
  height: 100%;
}

.body {
  display: flex;
  flex-direction: column;
  background-color: white;
}

/*日期显示  */

.datezone {
  background: white;
  text-align: center;
}

.nowdate {
  vertical-align: middle;
  vertical-align: -20%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 17px;
}

.tline {
  border-bottom: 1px solid #dedde0;
  display: inline-block;
  width: 60px;
  line-height: 10px;
  height: 30px;
}
